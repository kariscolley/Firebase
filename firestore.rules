rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /ramp_transactions/{transactionId} {
      allow read: if true;
      allow write: if request.auth != null; // Writes are performed via server actions
    }
    match /configuration/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Writes are performed via server actions
    }
  }
}

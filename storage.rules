rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files by default
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access only to the 'receipts' folder for authenticated users
    match /receipts/{transactionId}/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
